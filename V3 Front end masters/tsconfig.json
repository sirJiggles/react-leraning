{
  "compilerOptions": {
    "types": [
      "node",
      "react",
      "jest",
      "webpack-env",
      "react-router-dom",
      "react-dom",
      "react-redux",
      "redux",
      "styled-components",
      "axios"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
    // "allowSyntheticDefaultImports": true
  },
  "include": [
    "./js/**/*",
  ],
  "exclude": [
    "./js/__tests__/**/*",
    "./node_modules"
  ]
}