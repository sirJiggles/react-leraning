{
  "compilerOptions": {
    "types": [
      "react",
      "jest",
      "webpack-env",
      "react-router-dom",
      "react-dom",
      "react-redux"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": [
    "./js/**/*",
  ],
  "exclude": [
    "./js/__tests__/**/*",
    "./node_modules"
  ]
}